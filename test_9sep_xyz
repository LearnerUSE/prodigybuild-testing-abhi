# content of test_9sep_xyz.py
class Piece:
    def __init__(self, color):
        self.color = color

class Pawn(Piece):
    pass

class Rook(Piece):
    pass

class Knight(Piece):
    pass

class Bishop(Piece):
    pass

class Queen(Piece):
    pass

class King(Piece):
    pass

class ChessBoard:
    def __init__(self):
        self.board = self.create_board()

    def create_board(self):
        board = [[None for _ in range(8)] for _ in range(8)]
        colors = ["BLACK", "WHITE"]
        for i in range(8):
            for j in range(2):
                board[j][i] = Pawn(colors[j])
                board[j + 6][i] = Pawn(colors[1 - j])
        pieces = [Rook, Knight, Bishop, Queen, King, Bishop, Knight, Rook]
        for i in range(8):
            for j in range(2):
                board[j * 7][i] = pieces[i](colors[j])
                board[(j * 7) ^ 7][i] = pieces[i](colors[1 - j])
        return board

