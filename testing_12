# Program to add two prime numbers

def is_prime(num):
    """
    Function to check if a number is prime or not
    """
    if num > 1:
        for i in range(2, num):
            if (num % i) == 0:
                return False
        else:
            return True
    else:
        return False

def add_prime_numbers(num1, num2):
    """
    Function to add two prime numbers
    """
    if is_prime(num1) and is_prime(num2):
        return num1 + num2
    else:
        return "Both numbers must be prime!"

# Driver code
num1 = 7
num2 = 11

print(add_prime_numbers(num1, num2))