// Create a function to add two negative values
function addNegatives(num1, num2) {
  // Check if both values are negative
  if (num1 < 0 && num2 < 0) {
    // Return the sum of the two negative values
    return num1 + num2;
  } else {
    // Return an error message if either value is not negative
    return "Error: both values must be negative";
  }
}

// Call the function
console.log(addNegatives(-5, -10)); // Output: -15