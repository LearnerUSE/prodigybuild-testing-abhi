python
def check_prime(num):
    if num > 1:
        for i in range(2, num):
            if (num % i) == 0:
                return False
        else:
            return True
    else:
        return False

def add_prime(a, b):
    if check_prime(a) and check_prime(b):
        return a + b
    else:
        raise ValueError("Both numbers must be prime!")


