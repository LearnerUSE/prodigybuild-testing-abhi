<?xml version="1.0" encoding="UTF-8" ?>
<CustomApplication xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- refactored the brand colors and theme override -->
    <brand>
        <headerColor>#0070D2</headerColor>
        <shouldOverrideOrgTheme>true</shouldOverrideOrgTheme>
    </brand>
    <!-- updated formFactors setting -->
    <formFactors>Large</formFactors>
    <!-- disabling auto temp tabs and enabling personalization -->
    <isNavAutoTempTabsDisabled>true</isNavAutoTempTabsDisabled>
    <isNavPersonalizationDisabled>false</isNavPersonalizationDisabled>
    <label>Apex Recipes</label>
    <!-- setting nav type to Console -->
    <navType>Console</navType>
    <!-- renaming the tabs -->
    <tabs>Updated_Apex_Recipes</tabs>
    <!-- setting uiType to default -->
    <uiType>Default</uiType>
</CustomApplication>